<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/workout_item_bg">

            <TextView
                android:id="@+id/workoutItemName"
                android:layout_width="106dp"
                android:layout_height="54dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="36dp"
                android:text="Bench"
                android:textStyle="bold"
                android:textColor="@color/Ivory"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/workoutItemWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:text="200lb"
                android:textColor="@color/Ivory"
                android:textSize="25dp"
                app:layout_constraintStart_toEndOf="@+id/workoutItemName"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/workoutItemSets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:text="4 sets"
                android:textColor="@color/Ivory"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/workoutItemName"
                app:layout_constraintTop_toBottomOf="@+id/workoutItemWeight" />

            <TextView
                android:id="@+id/workoutItemReps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:layout_marginTop="15dp"
                android:text="10 reps each"
                android:textColor="@color/Ivory"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/workoutItemSets"
                app:layout_constraintTop_toBottomOf="@+id/workoutItemWeight" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>