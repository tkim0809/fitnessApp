<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statsPage">

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="557dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addExBtn"
        app:layout_constraintVertical_bias="0.724">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ex1Txt"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/ex1Sets"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ex1RepTxt"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ex1MaxTxt"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/ex2Txt"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/ex2Sets"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ex2RepTxt"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ex2MaxTxt"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/ex3Txt"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/ex3Sets"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ex3RepTxt"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ex3MaxTxt"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/addExBtn"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>